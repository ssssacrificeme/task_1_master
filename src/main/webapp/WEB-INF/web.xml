<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CreateCurrenciesServlet</servlet-name>
        <servlet-class>servlets.CreateCurrenciesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCurrenciesServlet</servlet-name>
        <url-pattern>/CreateCurrenciesServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReadCurrenciesServlet</servlet-name>
        <servlet-class>servlets.ReadCurrenciesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReadCurrenciesServlet</servlet-name>
        <url-pattern>/ReadCurrenciesServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCurrenciesServlet</servlet-name>
        <servlet-class>servlets.DeleteCurrenciesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCurrenciesServlet</servlet-name>
        <url-pattern>/DeleteCurrenciesServlet</url-pattern>
    </servlet-mapping>

</web-app>